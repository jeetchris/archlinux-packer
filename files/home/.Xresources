! Pour toutes les application Xlib : *foreground: ...
! Seulement XTerm : xterm*foreground: ...

! L'économisateur d'écran utilise lxdm
xscreensaver.newLoginCommand: lxdm -c USER_SWITCH

! Nom du terminal
xterm*termName: xterm-256color

! Police
*utf8: 1
*utf8Title: true
!*faceName: Ubuntu Mono (+fontSize 13)
*faceName: Liberation Mono
*faceNameDoublesize: IPAGothic
*faceSize: 11
*antialias: true
*rgba: rgb
*hinting: true
*hintstyle: hintslight

! Couleurs
*background: #262626
*foreground: #FFFFFF

*color0: #2E3436
*color1: #CC0000
*color2: #4E9A06
*color3: #C4A000
*color4: #3465A4
*color5: #75507B
*color6: #06989A
*color7: #D3C7CF

*color8:  #557553
*color9:  #EF2929
*color10: #8AE234
*color11: #FCE94F
*color12: #729FCF
*color13: #AD7FA8
*color14: #34E2E2
*color15: #EEEEEC

! Unifier le registre de copie
*selectToClipboard: true
